extends layout

block content
	div(class='wrapper')
		h2= title

		form(method='POST', action='/api/signup')
			input(type='hidden', name='_method', value='POST')
			p Username
			input(type='text', name='username')
			p Bio
			input(type='text', name='bio')
			p Password
			input(type='password', name='password')
			p
			input(type='submit' value='Submit')